<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical"
    android:minHeight="?attr/listPreferredItemHeightSmall"
    android:orientation="horizontal"
    >

  <TextView
      android:id="@+id/dateForecastItem_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_weight="1"
      android:ellipsize="end"
      android:lines="1"
      android:textAppearance="?attr/textAppearanceSubtitle1"
      tools:text="Wednesday"
      />

  <TextView
      android:id="@+id/dateForecastItem_rainChance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:gravity="center_vertical"
      android:lines="1"
      android:textAppearance="?attr/textAppearanceSubtitle2"
      android:textColor="?android:attr/textColorSecondary"
      android:visibility="gone"
      tools:text="90%"
      tools:visibility="visible"
      />

  <ImageView
      android:id="@+id/dateForecastItem_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:importantForAccessibility="no"
      tools:src="@drawable/ic_weather_rain_24dp"
      />

  <TextView
      android:id="@+id/dateForecastItem_lowTemp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="4dp"
      android:gravity="end"
      android:minWidth="32dp"
      android:textAppearance="@style/TextAppearance.SocketWeather.SmallTemp"
      tools:text="9°"
      />

  <View
      android:layout_width="24dp"
      android:layout_height="4dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/bg_line"
      />

  <TextView
      android:id="@+id/dateForecastItem_highTemp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="end"
      android:minWidth="36sp"
      android:textAppearance="@style/TextAppearance.SocketWeather.SmallTemp"
      tools:text="14°"
      />

</LinearLayout>
